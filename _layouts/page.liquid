---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  {% if page.headerpart %}
    <div class="profile float-{% if page.headerpart.align == 'left' %}left{% else %}right{% endif %}">
      {% if page.headerpart.image %}
  	{% assign headerpart_image_path = page.headerpart.image | prepend: 'assets/img/' %}
  	{% if page.headerpart.image_circular %}
    	  {% assign headerpart_image_class = 'img-fluid z-depth-1 rounded-circle' %}
  	{% else %}
    	  {% assign headerpart_image_class = 'img-fluid z-depth-1 rounded' %}
  	{% endif %}
        {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
        {% include figure.liquid loading="eager" path=headerpart_image_path class=headerpart_image_class sizes=sizes alt=page.headerpart.image cache_bust=true %}
      {% endif %}
      {% if page.headerpart.more_info %}
        <div class="more-info">{{ page.headerpart.more_info }}</div>
      {% endif %}
    </div>
    <header class="clearfix">
      <h1 class="post-title">{{ page.title }}</h1>
      <p class="post-description">{{ page.description }}</p>
    </header>
  {% else %}
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>
  {% endif %}
  
  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
